<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <context-param>
    <description>Prefix on hostname used for reverse proxy</description>
    <param-name>reverseProxyPrefix</param-name>
    <param-value>payroll</param-value>
  </context-param>
  <listener>
    <listener-class>com.codenvy.AppListener</listener-class>
  </listener>
  <filter> 
    <filter-name>loginFilter</filter-name>
    <filter-class>com.purplemagma.qbosimplepayroll.LoginFilter</filter-class> 
  </filter> 
  <filter-mapping> 
    <filter-name>loginFilter</filter-name>
    <url-pattern>/in/*</url-pattern> 
    <url-pattern>/rest/in/*</url-pattern> 
  </filter-mapping> 
  <servlet>
    <servlet-name>jersey-serlvet</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>javax.ws.rs.Application</param-name>
      <param-value>com.purplemagma.qbosimplepayroll.Application</param-value>
    </init-param>
    <init-param>
      <param-name>javax.json.stream.JsonGenerator.prettyPrinting</param-name>
      <param-value>true</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>jersey-serlvet</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping> 
  <welcome-file-list>
    <welcome-file>
      index.htm
    </welcome-file>
  </welcome-file-list>
</web-app>